import { axios } from '@/utils/request'

/**
 * 查询${functionName}
 *
 * @author ${authorName}
 * @date ${createDateString}
 */
export function ${className}Page (parameter) {
  return axios({
    url: '/${microName}/${className}/page',
    method: 'get',
    params: parameter
  })
}

